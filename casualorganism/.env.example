# Causal Organism Environment Variables
# Copy this file to .env and fill in the values
# DO NOT commit .env file to version control

# =============================================================================
# REQUIRED SECRETS - Must be set for production
# =============================================================================

# Neo4j Graph Database
GRAPH_DB_PASSWORD=your_neo4j_password_here

# TimescaleDB (PostgreSQL)
TIMESCALE_PASSWORD=your_timescale_password_here

# JWT Authentication
JWT_SECRET_KEY=your_jwt_secret_key_here_min_32_characters

# Sentry Error Tracking (optional but recommended)
SENTRY_DSN=your_sentry_dsn_here

# S3-Compatible Storage (for exports)
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key
S3_ENDPOINT=your_s3_endpoint_url
S3_BUCKET=causal-organism-exports
S3_REGION=us-east-1

# =============================================================================
# OPTIONAL SECRETS
# =============================================================================

# Redis (if password protected)
# REDIS_PASSWORD=your_redis_password

# HashiCorp Vault (if using Vault for secrets)
# VAULT_ADDR=https://vault.example.com:8200
# VAULT_TOKEN=your_vault_token
# VAULT_PATH=secret/data/causal-organism

# =============================================================================
# CONFIGURATION (non-secret)
# =============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Service version
SERVICE_VERSION=1.0.0

# Tracing configuration
TRACING_ENABLED=true
TRACING_EXPORTER=jaeger
JAEGER_HOST=jaeger
JAEGER_PORT=6831

# Database connection settings (non-secret)
GRAPH_DB_URL=bolt://neo4j:7687
GRAPH_DB_USER=neo4j

REDIS_URL=redis://redis:6379/0

TIMESCALE_HOST=timescale
TIMESCALE_PORT=5432
TIMESCALE_DB=postgres
TIMESCALE_USER=postgres
