# NexusAI IDE Environment Variables
# Copy this file to .env and fill in your values

# ===================
# APP SETTINGS
# ===================
APP_NAME="NexusAI IDE"
DEBUG=true
ENVIRONMENT=development
DEMO_MODE=false  # Set to true for development without auth
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars

# ===================
# DATABASE (PostgreSQL)
# ===================
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/nexusai
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# ===================
# OLLAMA (Local AI)
# ===================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_ENABLED=true
OLLAMA_DEFAULT_MODEL=llama3.2

# ===================
# OPENAI
# ===================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ENABLED=false
OPENAI_DEFAULT_MODEL=gpt-4o-mini
OPENAI_ORGANIZATION=

# ===================
# ANTHROPIC (Claude)
# ===================
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
ANTHROPIC_ENABLED=false
ANTHROPIC_DEFAULT_MODEL=claude-3-haiku-20240307

# ===================
# AZURE OPENAI
# ===================
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT=
AZURE_OPENAI_ENABLED=false

# ===================
# GROQ
# ===================
GROQ_API_KEY=
GROQ_ENABLED=false
GROQ_DEFAULT_MODEL=llama-3.1-70b-versatile

# ===================
# HUGGINGFACE
# ===================
HUGGINGFACE_API_KEY=
HUGGINGFACE_ENABLED=false

# ===================
# GOOGLE AI
# ===================
GOOGLE_API_KEY=
GOOGLE_ENABLED=false

# ===================
# MISTRAL AI
# ===================
MISTRAL_API_KEY=
MISTRAL_ENABLED=false

# ===================
# CODE EXECUTION
# ===================
CODE_EXECUTION_ENABLED=true
CODE_EXECUTION_TIMEOUT=30

# ===================
# RAG / EMBEDDINGS
# ===================
EMBEDDINGS_PROVIDER=ollama
VECTOR_DB_URL=

# ===================
# RATE LIMITING
# ===================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# ===================
# REDIS CACHING
# ===================
REDIS_ENABLED=true
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=300

# ===================
# REDIS CACHING
# ===================
REDIS_ENABLED=true
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=300  # 5 minutes
