# Backup Configuration
# Copy this file to backup-config.env and set your values
# DO NOT commit backup-config.env to version control

# S3 Configuration
S3_BUCKET=causal-organism-backups
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# Encryption (REQUIRED for production)
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=your_encryption_key_here

# Backup Retention
RETENTION_DAYS=30

# Neo4j Configuration
NEO4J_CONTAINER=neo4j
NEO4J_USER=neo4j
NEO4J_PASSWORD=causal_organism

# TimescaleDB Configuration
TIMESCALE_CONTAINER=timescale
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5432
TIMESCALE_DB=postgres
TIMESCALE_USER=postgres
TIMESCALE_PASSWORD=password

# Backup Directories
BACKUP_DIR=/tmp/backups
WAL_ARCHIVE_DIR=/tmp/wal_archive

# Notification (optional)
NOTIFICATION_EMAIL=ops@example.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
